#:kivy 1.11.1

<KMainMDLabel@MDLabel>:
    theme_text_color: "Primary"
    font_style: 'H5'
    size_hint_y: None
    height: self.texture_size[1]

<KMDLabel@MDLabel>:
    theme_text_color: "Secondary"
    size_hint_y: None
    font_style: 'H4'
    #font_size: '20sp'
    height: self.texture_size[1]

<KMDCard@MDCard>:
    orientation: 'vertical'
    padding: "8dp"
    spacing: "10dp"
    size_hint: 0.5, None
    size: '150dp', '150dp'
    pos_hint: {"center_x": .5, "center_y": .5}

<KMDTextField@MDTextField>:
    halign: "center"
