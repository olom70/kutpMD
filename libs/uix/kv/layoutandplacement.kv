#:kivy 1.11.1

<KMainMDLabel@MDLabel>:
    theme_text_color: "Primary"
    font_style: 'H5'
    halign: 'center'
    size_hint_y: None
    height: self.texture_size[1]

<KMainMDLabelLeft@KMainMDLabel>:
    halign: 'left'

<KMDLabel@MDLabel>:
    theme_text_color: "Secondary"
    size_hint_y: None
    font_style: 'H6'
    halign: 'center'
    height: self.texture_size[1]

<KMDRaisedButton@MDRaisedButton>:
    theme_text_color: "Secondary"
    size_hint_y: None
    font_size: '20sp'
    pos_hint: {"center_x": .5, "center_y": .5}

<KMDCard@MDCard>:
    orientation: 'vertical'
    padding: "8dp"
    spacing: "10dp"
    size_hint: 0.5, None
    size: '150dp', '100dp'
    pos_hint: {"center_x": .5, "center_y": .5}

<KMDCardInput2@KMDCard>:
    size: '150dp', '70dp'
    padding: "2dp"

<KMDCard3@KMDCard>:
    size_hint: 0.3333, None

<KMDCard1@KMDCard>:
    size_hint: 0.9, None

<KMDSeparator@MDSeparator>:
    height: "1dp"

<KMDTextField@MDTextField>:
    halign: "center"

<KMDStackLayout@MDStackLayout>
    #adaptive_height: True
    #adaptive_width: True
    #adaptive_size: True